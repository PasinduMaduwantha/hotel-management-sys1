<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.Login">
    <content>
        <AnchorPane>
            <children>
                <ImageView fitHeight="768.0" fitWidth="1366.0">
                    <image>
                        <Image url="@../images/image.jpg" />
                    </image>
                </ImageView>
                <AnchorPane opacity="0.7" prefHeight="150.0" prefWidth="1366.0" style="-fx-background-color: #ffff;" />
                <Button fx:id="frogotpwBtn" defaultButton="true" layoutX="835.0" layoutY="640.0" mnemonicParsing="false" onAction="#frogotpwOnAction" style="-fx-background-radius: 20; -fx-border-radius: 20;" text="Frogot Password?">
                    <font>
                        <Font name="Comic Sans MS Bold" size="30.0" />
                    </font>
                </Button>
                <AnchorPane layoutX="240.0" layoutY="320.0" opacity="0.7" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffff; -fx-background-radius: 20; -fx-border-radius: 20;" AnchorPane.leftAnchor="400.0" AnchorPane.topAnchor="200.0">
                    <children>
                        <Label layoutX="20.0" layoutY="80.0" text="Email">
                            <font>
                                <Font name="Comic Sans MS Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label layoutX="20.0" layoutY="140.0" text="Password">
                            <font>
                                <Font name="Comic Sans MS Bold" size="24.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtEmail" layoutX="240.0" layoutY="77.0" prefHeight="40.0" prefWidth="320.0" style="-fx-background-radius: 20; -fx-border-radius: 20;">
                            <font>
                                <Font name="Comic Sans MS Bold" size="20.0" />
                            </font>
                        </TextField>
                        <PasswordField fx:id="txtPassword" layoutX="240.0" layoutY="140.0" prefHeight="40.0" prefWidth="320.0" style="-fx-background-radius: 20; -fx-border-radius: 20;" />
                    </children>
                </AnchorPane>
                <Button fx:id="sihnupBtn" defaultButton="true" layoutX="630.0" layoutY="639.0" mnemonicParsing="false" onAction="#signupOnAction" style="-fx-background-radius: 20; -fx-border-radius: 20;" text="Signup">
                    <font>
                        <Font name="Comic Sans MS Bold" size="30.0" />
                    </font>
                </Button>
                <Button fx:id="loginBtn" defaultButton="true" layoutX="335.0" layoutY="642.0" mnemonicParsing="false" onAction="#loginOAction" style="-fx-background-radius: 20; -fx-border-radius: 20;" text="Login">
                    <font>
                        <Font name="Comic Sans MS Bold" size="30.0" />
                    </font>
                </Button>
                <Label layoutX="645.0" layoutY="150.0" text="Login">
                    <font>
                        <Font name="Comic Sans MS Bold" size="36.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>

